@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}



    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Lobster">
    <link rel="stylesheet" href='https://fonts.googleapis.com/css?family=Montserrat'>
    <link rel="stylesheet" href="/style1.css">



<div class="main container-fluid p-0">
    <div class="centered">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            
            <div class="form-group">
                <label asp-for="Input.Email" for="email">Email address</label>
                <input type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email" asp-for="Input.Email">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Input.Password" for="password">Password</label>
                <input type="password" class="form-control" id="password" placeholder="Password" asp-for="Input.Password">
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword" for="password_repeat">Repeat password</label>
                <input type="password" class="form-control" id="password_repeat" placeholder="Repeat password" asp-for="Input.ConfirmPassword">
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <br>
            <div asp-validation-summary="All" class="text-danger"></div>
            
            <div style="text-align: center; margin:  auto;">
                <button type="submit" class="btn btn-success">Register</button>
                <a href="Login"><button type="button" class="btn btn-outline-primary" >Login</button></a>
            </div>
        </form>
    </div>

</div>



<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj"
        crossorigin="anonymous"></script>


