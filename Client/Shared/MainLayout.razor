@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@inherits LayoutComponentBase


<div class="page">
    

    <MudDrawerContainer>
        <MudDrawer @bind-Open="@Open"  Variant="@DrawerVariant.Persistent" Fixed="true" ClipMode="DrawerClipMode.Never">
            <NavMenu />
        </MudDrawer>

        <MudMainContent>
            <MudAppBar Fixed="true" Dense="true">
                <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => MenuClicked())" />
                ProITM - Docker manager
                <MudSpacer />
                <LoginDisplay />
            </MudAppBar>
            <div class="main">
                @Body
            </div>
        </MudMainContent>
    </MudDrawerContainer>


</div>


@code
{
    bool Open = true;

    void MenuClicked()
    {
        Open = !Open;
    }

}